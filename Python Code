import pandas as pd
import numpy as np
import plotly.express as px
import plotly.graph_objects as go

# Load the dataset
data = pd.read_csv("Screentime-App-Details.csv")

# Display the first few rows of the dataset
print(data.head())

# Check for missing values in the dataset
print(data.isnull().sum())

# Display basic statistical details of the dataset
print(data.describe())

# Create a bar plot to visualize the usage by app over time
figure = px.bar(
    data_frame=data, 
    x="Date", 
    y="Usage", 
    color="App", 
    title="Usage"
)
figure.show()

# Create a bar plot to visualize the number of notifications by app over time
figure = px.bar(
    data_frame=data, 
    x="Date", 
    y="Notifications", 
    color="App", 
    title="Notifications"
)
figure.show()

# Create a bar plot to visualize the number of times apps were opened over time
figure = px.bar(
    data_frame=data, 
    x="Date", 
    y="Times opened", 
    color="App",
    title="Times Opened"
)
figure.show()

# Create a scatter plot to visualize the relationship between notifications and usage
figure = px.scatter(
    data_frame=data, 
    x="Notifications",
    y="Usage", 
    size="Notifications", 
    trendline="ols", 
    title="Relationship Between Number of Notifications and Usage"
)
figure.show()
